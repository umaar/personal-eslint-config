{
	"rules": {
	  "import/extensions": [
	    "error",
	    "always",
	    {
	      "ignorePackages": true
	    }
	  ],
	  "unicorn/import-index": 0,
	  "import/no-useless-path-segments": 0,
	  "unicorn/prevent-abbreviations": [
	    "error",
	    {
	      "checkProperties": true,
	      "checkFilenames": true,
	      "checkVariables": true
	    }
	  ],
	  "unicorn/consistent-function-scoping": 2,
	  "import/first": [
	    "error",
	    "absolute-first"
	  ]
	}
}